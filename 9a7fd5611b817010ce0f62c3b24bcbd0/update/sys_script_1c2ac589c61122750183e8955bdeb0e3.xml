        <script><![CDATA[if (current.state.changesTo("3")) {
  var msg = 'Change completed';
  gs.eventQueue("change.complete", current, current.state, previous.state);
  closeRelatedGivenChange(current);
  closeRelatedTasks(current);
}

// Find related problems for a change_request and close them 
function closeRelatedGivenChange(me) {
   var problems = new GlideRecord('problem');
   problems.addQuery('rfc', '=', me.sys_id);
   problems.query();
   while (problems.next()) {   
      msg = "Problem " + problems.number + ' closed based on closure of change '+me.number;  
      gs.print(msg);     
      problems.problem_state.setValue(4);
      var notes = problems.close_notes.getDisplayValue();
      notes = notes + '\n' + msg;
      problems.close_notes.setValue(notes);
      problems.update();  
   }
}



